{
  "bootstrap-sha": "main",
  "packages": {
    "packages/api": {
      "release-type": "node",
      "component": "@owcs/api",
      "changelog-path": "CHANGELOG.md",
      "pull-request-title-pattern": "chore(${component}): release ${version}"
    },
    "packages/cli": {
      "release-type": "node",
      "component": "@owcs/cli",
      "changelog-path": "CHANGELOG.md",
      "pull-request-title-pattern": "chore(${component}): release ${version}"
    },
    "packages/schemas": {
      "release-type": "node",
      "component": "@owcs/schemas",
      "changelog-path": "CHANGELOG.md",
      "pull-request-title-pattern": "chore(${component}): release ${version}"
    }
  },
  "changelog-sections": [
    {
      "type": "feat",
      "section": "Features"
    },
    {
      "type": "fix",
      "section": "Bug Fixes"
    },
    {
      "type": "perf",
      "section": "Performance Improvements"
    },
    {
      "type": "docs",
      "section": "Documentation"
    },
    {
      "type": "refactor",
      "section": "Code Refactoring"
    },
    {
      "type": "test",
      "section": "Tests"
    },
    {
      "type": "build",
      "section": "Build System"
    },
    {
      "type": "ci",
      "section": "Continuous Integration"
    }
  ],
  "versioning": "always-bump-patch",
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true
}
