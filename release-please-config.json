{
  "bootstrap-sha": "main",
  "packages": {
    ".": {
      "release-type": "node",
      "component": "owcs",
      "include-component-in-tag": false,
      "changelog-path": "CHANGELOG.md"
    },
    "packages/api": {
      "release-type": "node",
      "component": "@owcs/api",
      "changelog-path": "CHANGELOG.md"
    },
    "packages/cli": {
      "release-type": "node",
      "component": "@owcs/cli",
      "changelog-path": "CHANGELOG.md"
    },
    "packages/schemas": {
      "release-type": "node",
      "component": "@owcs/schemas",
      "changelog-path": "CHANGELOG.md"
    }
  },
  "changelog-sections": [
    {
      "type": "feat",
      "section": "Features"
    },
    {
      "type": "fix",
      "section": "Bug Fixes"
    },
    {
      "type": "perf",
      "section": "Performance Improvements"
    },
    {
      "type": "docs",
      "section": "Documentation"
    },
    {
      "type": "refactor",
      "section": "Code Refactoring"
    },
    {
      "type": "test",
      "section": "Tests"
    },
    {
      "type": "build",
      "section": "Build System"
    },
    {
      "type": "ci",
      "section": "Continuous Integration"
    }
  ],
  "group-pull-request-title-pattern": "chore: release ${version}",
  "versioning": "always-bump-patch",
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "release-as": "0.1.0"
}
