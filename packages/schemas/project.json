{
  "name": "schemas",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/schemas/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "packages/schemas/dist",
        "main": "packages/schemas/src/index.ts",
        "tsConfig": "packages/schemas/tsconfig.json",
        "assets": ["packages/schemas/src/v1/*.json"]
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint packages/schemas/src/**/*.ts",
        "cwd": "{workspaceRoot}"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/coverage"],
      "options": {
        "command": "vitest run --config vite.config.ts --coverage.reportsDirectory=../../coverage/packages/schemas",
        "cwd": "{workspaceRoot}"
      }
    }
  },
  "tags": []
}
