{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://owcs.dev/schema/1.0.0",
  "title": "Open Web Component Specification",
  "description": "Schema for OWCS specification format",
  "type": "object",
  "required": ["owcs", "info", "components"],
  "patternProperties": {
    "^x-": {
      "type": "object",
      "description": "Specification extensions for runtime and vendor-specific metadata"
    }
  },
  "properties": {
    "owcs": {
      "type": "string",
      "description": "OWCS specification version",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "info": {
      "type": "object",
      "required": ["title", "version"],
      "properties": {
        "title": {
          "type": "string",
          "description": "The title of the component specification"
        },
        "version": {
          "type": "string",
          "description": "The version of the component specification"
        },
        "description": {
          "type": "string",
          "description": "A description of the component specification"
        }
      }
    },
    "components": {
      "type": "object",
      "required": ["webComponents"],
      "properties": {
        "webComponents": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/WebComponent"
          }
        }
      }
    }
  },
  "definitions": {
    "WebComponent": {
      "type": "object",
      "required": ["tagName"],
      "properties": {
        "tagName": {
          "type": "string",
          "description": "The custom element tag name",
          "pattern": "^[a-z][a-z0-9]*(-[a-z0-9]+)+$"
        },
        "props": {
          "type": "object",
          "properties": {
            "schema": {
              "$ref": "#/definitions/JSONSchema"
            }
          }
        },
        "events": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/Event"
          }
        }
      }
    },
    "Event": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "description": "The event type"
        },
        "payload": {
          "$ref": "#/definitions/JSONSchema"
        },
        "description": {
          "type": "string",
          "description": "Description of the event"
        },
        "deprecated": {
          "type": "boolean",
          "description": "Whether the event is deprecated"
        },
        "bubbles": {
          "type": "boolean",
          "description": "Whether the event bubbles up through the DOM"
        },
        "composed": {
          "type": "boolean",
          "description": "Whether the event can bubble across the shadow DOM boundary"
        }
      }
    },
    "JSONSchema": {
      "type": "object",
      "properties": {
        "type": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "properties": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/JSONSchema"
          }
        },
        "items": {
          "$ref": "#/definitions/JSONSchema"
        },
        "required": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "enum": {
          "type": "array"
        },
        "description": {
          "type": "string",
          "description": "Description of the property or type"
        },
        "default": {
          "description": "Default value for the property"
        },
        "deprecated": {
          "type": "boolean",
          "description": "Whether the property is deprecated"
        },
        "format": {
          "type": "string"
        },
        "$ref": {
          "type": "string"
        },
        "oneOf": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/JSONSchema"
          }
        },
        "anyOf": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/JSONSchema"
          }
        },
        "allOf": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/JSONSchema"
          }
        },
        "additionalProperties": {
          "oneOf": [
            {
              "type": "boolean"
            },
            {
              "$ref": "#/definitions/JSONSchema"
            }
          ]
        }
      }
    }
  }
}
