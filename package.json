{
  "name": "owcs",
  "version": "1.0.0",
  "description": "Open Web Component Specification - Generate OWCS specs from framework code",
  "type": "module",
  "bin": {
    "owcs": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/index.js"
    },
    "./adapters/angular": {
      "types": "./dist/types/adapters/angular/index.d.ts",
      "default": "./dist/adapters/angular/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "npm run build",
    "verdaccio:start": "verdaccio --config ./verdaccio.yaml",
    "verdaccio:publish": "npm publish --registry http://localhost:4873",
    "verdaccio:unpublish": "npm unpublish owcs --registry http://localhost:4873 --force",
    "prepare": "husky",
    "format": "prettier --write \"src/**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,json,md}\"",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "sanity": "tsc && node dist/cli/index.js generate -p examples/angular --format yaml --output examples/owcs.yaml"
  },
  "keywords": [
    "web-components",
    "angular",
    "specification",
    "ast",
    "typescript",
    "owcs",
    "open-web-component-specification"
  ],
  "author": "Rakesh Pawar <rakesh.u.pawar@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.17.1",
    "commander": "^14.0.2",
    "js-yaml": "^4.1.1",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.0.6",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "vite": "^7.3.1",
    "vitest": "^4.0.16"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
