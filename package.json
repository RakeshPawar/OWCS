{
  "name": "owcs",
  "version": "1.0.0",
  "description": "Open Web Component Specification - Generate OWCS specs from framework code",
  "type": "module",
  "bin": {
    "owcs": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/index.js"
    },
    "./adapters/angular": {
      "types": "./dist/types/adapters/angular/index.d.ts",
      "default": "./dist/adapters/angular/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "npm run build",
    "verdaccio:start": "verdaccio --config ./verdaccio.yaml",
    "verdaccio:publish": "npm publish --registry http://localhost:4873",
    "verdaccio:unpublish": "npm unpublish owcs --registry http://localhost:4873 --force"
  },
  "keywords": [
    "web-components",
    "angular",
    "specification",
    "ast",
    "typescript",
    "owcs",
    "open-web-component-specification"
  ],
  "author": "Rakesh Pawar <rakesh.u.pawar@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.12.0",
    "commander": "^11.1.0",
    "js-yaml": "^4.1.0",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.6",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.6.1",
    "vite": "^5.4.21",
    "vitest": "^1.6.1"
  }
}
